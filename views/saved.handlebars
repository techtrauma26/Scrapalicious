<div class="container">
    <div class="col-lg-12">
        {{#if article}}
        {{#each article}}
        <div class="card">
            <div class="card-header">
                <h4>{{this.title}}</h4>
            </div>
        </div>
        <div class="card">
            <div class="card-body">
                <p> {{this.summary}}</p>
                <a href={{this.link}} target="_blank">{{this.link}}</a>
                <br><br>
                <button type="button" class="btn btn-primary addNote" data-toggle="modal"
                    data-target="#noteModal{{this._id}}" data-id={{this._id}}>Comments</button>
                <button type="button" class="btn btn-primary delete"   data-id={{this._id}}>Delete</button>
            </div>
        </div>

        {{/each}}
        {{else}}
        <div class="card">
            <div class="card-body">
                <h4>There are 0 saved articles.</h4>
            </div>
        </div>
        {{/if}}

    </div>

    {{#each article}}
    {{> notes-modal }}
    {{/each}}